{
  "rules": {
    "react/prop-types": [
      0
    ],
    "quotes": [
      "error",
      "single",
      {
        "allowTemplateLiterals": true
      }
    ],
    "space-in-parens": [
      "warn",
      "never"
    ],
    "new-cap": [
      "error",
      { "capIsNewExceptions": [ "Record" ] }
    ],
    "camelcase": [
      "warn"
    ],
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "no-console": "off",
    "no-unused-vars": "off",
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "jsx-a11y/href-no-hash": 0,
    "jsx-a11y/anchor-has-content": 0,
    "react/require-extension": 0,
    "react/jsx-filename-extension": 0,
    "react/jsx-uses-react": ["error"],
    "react/jsx-uses-vars": ["error"],

    "semi": [
      "error",
      "never"
    ]
  },
  "plugins": [
    "react"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "parserOptions": { "ecmaVersion": 6 } },
  "env": {
    "es6": true,
    "node": true,
    "jest": true,
    "browser": true
  },
  "globals": {
    "__API_URL__": false,
    "__TITLE__": false,
    "__DEBUG__": false
  },
  "extends": [
    "eslint:recommended", 
    "airbnb",
    "plugin:react/recommended"
  ]
}